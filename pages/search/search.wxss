/* 搜索历史 */
.searchHistoryBox {
    width: 90%;
    margin: auto;
    margin-top: 48rpx;
   
}

.searchHistory_titlebox {
    display: flex;
    justify-content: space-between;
}

.searchHistory_title {
    font-family: SourceHanSansSC-Medium;
    font-size: 26rpx;
    color: #333333;
    font-weight: 600;
}

.clearHistoryimg {
    width: 30rpx;
}

.searchHistory_countBox {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-top: -6rpx;
    /* border: goldenrod 1rpx solid; */
}

.searchHistory_countBox::after {
    content: "";
    width: 210rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.searchHistory_count {
    width: 210rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-family: SourceHanSansSC-Regular;
    font-size: 28rpx;
    color: #5D6F9F;
    background: #F0F7FF;
    border-radius: 40rpx;
    text-align: center;
    margin-top: 24rpx;
}

.searchHistory_countitem {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 170rpx;
    margin: auto;
}

