body{
  font-family: SourceHanSansSC-Regular;
  position: fixed;
  top: 0;
  left: 0;
}
.box-entb{
  width: 100%;
  height: 100vh;
}
.container {
  height: 100vh;
}

.mobile {
  width: 100%;
  height: 100%;
  position: fixed;
}

.mobile > view {
  transition: all .3s ease-in-out;
}

.mobile .left {
  position: absolute;
  top: 0;
  right: 0;
  width: 0;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  height: 100%;
  background: #FFF;
  z-index: 3;
  border-top-left-radius: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mobile .left .item {
  width: 80%;
  height: 60rpx;
  background: #FFF;
  margin-top: 40rpx;
  border-radius: 4px;
  border: 0px;
}

.mobile.active .left {
  width: 66.66%;
  overflow-y: auto;
}

.mobile.active .right {
  opacity: .3;
}

.mobile .right {
  width: 33.3%;
  height: 100%;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
}

.mobile .nav-bar {
  height: 80rpx;
  position: relative;
  background: #2782d7;
  border-radius: 4px;
  margin-bottom: 30rpx;
}

.mobile .nav-bar .button {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 50%;
  left: 30rpx;
  transform: translateY(-50%);
}



.laptop {
  display: none;
}

.laptop .nav-bar {
  height: 40rpx;
  position: relative;
  background: #2782d7;
  border-radius: 4px;
  margin-bottom: 20rpx;
}

.laptop .flexbox {
  display: flex;
}

.laptop .flexbox .left {
  flex: 1;
}

.laptop .flexbox .left .item {
  width: 90%;
  height: 30rpx;
  background: #FFF;
  margin-bottom: 15rpx;
  border-radius: 4px;
}

.laptop .flexbox .right {
  flex: 3;
  height: 500rpx;
  background: #000;
  border-radius: 4px;
}

@media only screen and (min-width: 576px) {
  .mobile {
    display: none;
  }
  .laptop {
    display: block;
  }
}

