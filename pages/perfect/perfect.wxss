}

.enrollBox_title {
  color: #214178;
  font-size: 45rpx;
    display: flex;
    justify-content: space-between;
}

.bizreaderBox {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 190rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 26rpx;
