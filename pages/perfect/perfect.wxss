page{
  background-color: #F6F8FD;
}
.perjectbg {
    width: 100%;
}


.enroll_box {
  position: absolute;
    top: 180rpx;
    left: 50rpx;
}
.title_text{
  color: #092C68;
  font-weight: 600;
}
.enrollBox_subtitle{
  margin-top: 10rpx;
